modules = ["nodejs-20", "bash"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq"]

[deployment]
build = ["bash", "scripts/build.sh"]
run = ["npm", "run", "dev"]
deploymentTarget = "vm"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 8289
externalPort = 3001

[[ports]]
localPort = 37509
externalPort = 3003

[[ports]]
localPort = 50052
externalPort = 3002

[[ports]]
localPort = 50053
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mastra Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inngest Server"

[[workflows.workflow]]
name = "Mastra Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx mastra dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Inngest Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/inngest.sh"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

modules = ["nodejs-20", "bash"]

[agent]
stack = "AGENT_STACK"
integrations = ["agentstack-trigger-telegram:1.0.0", "javascript_gemini:1.0.0"]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["jq"]

[deployment]
build = ["npm", "run", "build"]
run = ["npm", "run", "dev"]
deploymentTarget = "autoscale"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8289
externalPort = 3001

[[ports]]
localPort = 42917
externalPort = 3003

[[ports]]
localPort = 50052
externalPort = 3002

[[ports]]
localPort = 50053
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mastra Application"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inngest Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Cinema Bot"

[[workflows.workflow]]
name = "Mastra Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx mastra dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Inngest Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./scripts/inngest.sh"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Cinema Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx tsx src/start-bot.ts"

[workflows.workflow.metadata]
outputType = "console"
